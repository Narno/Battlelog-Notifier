{
  "name": "Battlelog-Notifier",
  "version": "0.1.1",
  "description": "Displays the count of your Battlelog friends in the extension's badge, by status: in game, online or offline.",
  "homepage": "http://narno.org/Battlelog-Notifier",
  "author": "Arnaud Ligny",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Narno/Battlelog-Notifier.git"
  },
  "bugs": {
    "url": "https://github.com/Narno/Battlelog-Notifier/issues"
  },
  "main": "gulpfile.js",
  "scripts": {
    "test": "xo",
    "build": "node_modules/.bin/gulp dist"
  },
  "devDependencies": {
    "del": ">=1.2.0",
    "gulp": "^4.0.0",
    "gulp-cleanhtml": ">=0.0.2",
    "gulp-crx": "git://github.com/PavelVanecek/gulp-crx.git#v0.1.0",
    "gulp-jshint": ">=2.0.0",
    "gulp-minify-css": ">=0.3.0",
    "gulp-strip-debug": ">=0.3.0",
    "gulp-uglify": ">=0.2.1",
    "gulp-zip": ">0.1.2",
    "jshint": "^2.9.1",
    "vinyl-paths": ">=1.0.0",
    "xo": "^0.21.1"
  },
  "xo": {
    "space": true,
    "envs": [
      "browser",
      "webextensions",
      "jquery"
    ],
    "rules": {
      "import/no-unassigned-import": 0,
      "no-lonely-if": "off",
      "max": 7
    },
    "ignores": [
      "build/**"
    ]
  }
}
